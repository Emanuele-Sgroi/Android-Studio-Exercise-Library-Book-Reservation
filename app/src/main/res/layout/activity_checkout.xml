<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Reservations"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="18dp"
       />
    <TextView
        android:id="@+id/textNoReservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven't reserved any book yet"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCheckout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_checkout"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/buttonCloseApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close App"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_close"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</LinearLayout>
